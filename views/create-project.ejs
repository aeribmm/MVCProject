<h1>Utwórz nowy projekt</h1>

<% if (locals.error) { %>
    <div class="alert alert-error"><%= error %></div>
<% } %>

<form action="/projects" method="POST" class="form">
    <div class="form-group">
        <label for="name">Nazwa projektu:</label>
        <input type="text" id="name" name="name" required class="form-control">
    </div>

    <div class="form-group">
        <label for="description">Opis projektu:</label>
        <textarea id="description" name="description" rows="4" required class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="deadline">Termin realizacji:</label>
        <input type="date" id="deadline" name="deadline" required class="form-control">
    </div>

    <div class="form-group">
        <label for="status">Status początkowy:</label>
        <select id="status" name="status" class="form-control">
            <option value="Planowany" selected>Planowany</option>
        </select>
        <small class="form-hint">Nowe projekty rozpoczynają się jako "Planowane"</small>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Utwórz projekt</button>
        <a href="/" class="btn btn-secondary">Anuluj</a>
    </div>
</form>