<% layout('layout') -%>

<h1>Edytuj projekt</h1>

<form action="/projects/<%= project.id %>" method="POST" class="form">
    <div class="form-group">
        <label for="name">Nazwa projektu:</label>
        <input type="text" id="name" name="name" value="<%= project.name %>" required class="form-control">
    </div>

    <div class="form-group">
        <label for="description">Opis projektu:</label>
        <textarea id="description" name="description" rows="4" required class="form-control"><%= project.description %></textarea>
    </div>

    <div class="form-group">
        <label for="deadline">Termin realizacji:</label>
        <input type="date" id="deadline" name="deadline" value="<%= project.deadline %>" required class="form-control">
    </div>

    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="status" class="form-control">
            <option value="Planowany" <%= project.status === 'Planowany' ? 'selected' : '' %>>Planowany</option>
            <option value="W trakcie" <%= project.status === 'W trakcie' ? 'selected' : '' %>>W trakcie</option>
            <option value="Zakończony" <%= project.status === 'Zakończony' ? 'selected' : '' %>>Zakończony</option>
            <option value="Wstrzymany" <%= project.status === 'Wstrzymany' ? 'selected' : '' %>>Wstrzymany</option>
        </select>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        <a href="/projects/<%= project.id %>" class="btn btn-secondary">Anuluj</a>
    </div>
</form>